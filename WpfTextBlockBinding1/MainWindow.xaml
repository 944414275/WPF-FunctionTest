<Window x:Class="WpfTextBlockBinding1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTextBlockBinding1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Name="sp1">
            <TextBox Name="txtName" Text="{Binding Name}" Width="100" Height="100"/>
            <TextBox Name="txtAge" Text="{Binding Age}" Width="100" Height="100"/>
            <Button Content="name" Height="23"  x:Name="button1" Width="75" Click="btn1" />
            <Button Content="age" Height="23"  Name="button2" Width="75" Click="btn2" />
        </StackPanel> 
    </Grid>
</Window>
